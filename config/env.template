# ------------------------------
# Song Pig Listening Rooms Env Template
# Copy this file to `.env.local` for local dev
# and replicate the same keys with real values in production.
# ------------------------------

# === Core App Settings ===
# Public URL (include protocol). For local dev use http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Logical environment tag: development | staging | production
NEXT_PUBLIC_APP_ENV=development

# Controls dev-only helpers (login autofill buttons, banners, etc.)
NEXT_PUBLIC_SHOW_DEV_HELPERS=true
NEXT_PUBLIC_ENABLE_DEV_HELPERS=true

# Show the deployment banner even in production (true/false)
NEXT_PUBLIC_SHOW_DEPLOYMENT_BANNER=false

# Show link to /changelog in the footer (set to 'false' to hide)
NEXT_PUBLIC_SHOW_CHANGELOG_LINK=true

# Optional build timestamp override (otherwise current date is used)
NEXT_PUBLIC_BUILD_TIMESTAMP=

# === Supabase Configuration ===
# Project URL from Supabase (starts with https://)
NEXT_PUBLIC_SUPABASE_URL=

# Anonymous public API key
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Service role key (SERVER ONLY â€“ never expose publicly)
SUPABASE_SERVICE_ROLE_KEY=

# === AI Severity Analysis ===
# Comma-separated priority list. Supported values: openai, anthropic, rule
AI_PROVIDER_ORDER=openai,anthropic,rule

# OpenAI settings (required if using OpenAI as primary provider)
OPENAI_API_KEY=
OPENAI_SEVERITY_MODEL=gpt-4o-mini

# Anthropic settings (optional fallback provider)
ANTHROPIC_API_KEY=
ANTHROPIC_SEVERITY_MODEL=claude-3-haiku-20240307

# === Cloudflare R2 Audio Storage ===
# Account ID from Cloudflare dashboard
CLOUDFLARE_ACCOUNT_ID=

# R2 API credentials (create via R2 > Manage R2 API Tokens)
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=

# R2 bucket name
CLOUDFLARE_R2_BUCKET_NAME=songpig-audio

# Public URL for the R2 bucket (enable via R2 bucket settings > Public Access)
CLOUDFLARE_R2_PUBLIC_URL=

# === Optional Overrides (Uncomment if needed) ===
