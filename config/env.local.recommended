# === Core App Settings ===
NEXT_PUBLIC_APP_URL=https://rooms.songpig.com
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_SHOW_DEV_HELPERS=false
NEXT_PUBLIC_ENABLE_DEV_HELPERS=false
NEXT_PUBLIC_SHOW_DEPLOYMENT_BANNER=false
